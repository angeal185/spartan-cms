@media (max-width: 992px){
  .navbar-nav.nav-lnks{
    display: none!important;
  }
  #side-content{
    position: fixed;
    right: -300px;
    width: 300px;
    height: 100%;
    background: white;
    box-shadow: 0 0 6px;
    top: 80px;
    overflow: scroll;
    padding: 20px 14px;
    transition: right 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  #side-content.show{
    right: 0;
    z-index: 999;
    background: rgba(255, 255, 255, 0.7);
  }
  #sidebar-main{
    margin-bottom: 80px;
  }
  #main-content{
    min-height: 100vh;
  }
  #top-nav{
      position: fixed;
  }
  bread-crumb, welcome-msg{
    padding-top: 80px;
  }
  .nav-alt{
    width: 100%;
    text-align: center;
  }
  .menu-link{
    display: block;
  }
}

@media (max-width: 720px){
  .foot-links{
    text-align: center!important;
  }
}
